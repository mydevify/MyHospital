<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.miniprojet.controller.PatientMedicamentController">

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="25.0">
        <!-- TableView centered in VBox -->
        <TableView fx:id="patientMedTableView" prefHeight="250.0" prefWidth="520.0">
            <columns>
                <TableColumn fx:id="cinColumn" prefWidth="250.0" text="Patient CIN" />
                <TableColumn fx:id="refColumn2" prefWidth="250.0" text="Medicament Ref" />
            </columns>
        </TableView>

        <!-- Labels -->
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Search Option:" />
            <Label text="Patient CIN:" />
        </HBox>

        <!-- ComboBoxes -->
        <HBox alignment="CENTER" spacing="10.0">
            <ComboBox fx:id="searchComboBox" prefWidth="120.0" promptText="Search Option" />
            <ComboBox fx:id="patientCINComboBox" prefWidth="120.0" promptText="Patient CIN" />
        </HBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="insertPatientMedButton" mnemonicParsing="false" onAction="#handleInsertPatientMed" onMouseClicked="#handleInsertPatientMed" style="-fx-background-color: #23eb4b;" text="Add" textFill="#ffffff">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
            <Button fx:id="DeletePatientMedC" mnemonicParsing="false" onMouseClicked="#DeletePatientMedC" style="-fx-background-color: #ee4747;" text="Delete" textFill="#ffffff">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
        </HBox>
    </VBox>

</AnchorPane>
