<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.miniprojet.controller.GestionMedicamentController">

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="25.0">
        <children>
            <TableView fx:id="medicamentTable" prefHeight="300.0" prefWidth="520.0">
                <columns>
                    <TableColumn fx:id="refColumn" text="Reference" />
                    <TableColumn fx:id="libelleColumn" text="Libelle" />
                    <TableColumn fx:id="prixColumn" text="Prix" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <GridPane alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" />
                    <ColumnConstraints hgrow="SOMETIMES" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                </rowConstraints>

                <Label text="Libelle:" />
                <TextField fx:id="libelle" GridPane.columnIndex="1" />

                <Label text="Reference:" GridPane.rowIndex="1" />
                <TextField fx:id="ref" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Prix:" GridPane.rowIndex="2" />
                <TextField fx:id="prix" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>

            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="ajoutm" mnemonicParsing="false" onMouseClicked="#addMedication" style="-fx-background-color: #23eb4b;" text="Add Medication" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
                <Button fx:id="suppm" mnemonicParsing="false" onMouseClicked="#deleteMedication" style="-fx-background-color: #ee4747;" text="Remove Medication" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
                <Button fx:id="updateButton" onMouseClicked="#handleUpdateMedication" style="-fx-background-color: #FFA500;" text="Update Medication" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            </HBox>
        </children>
    </VBox>

</AnchorPane>
